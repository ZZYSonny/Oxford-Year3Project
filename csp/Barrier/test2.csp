include "correct.csp"

hide = True
channel Sync

Spec = Sync -> Spec

Lin(All,me)=
  Call!me ->
  Sync ->
  Return!me ->
  Lin(All,me)
LinEvents(All,me)={|Sync,Call.me,Return.me|}
Linearizers(All)= || me: All @ [LinEvents(All,me)]  Lin(All,me)

System1 = runWith(hide,
    repeat(sync(TA)) |||
    repeat(sync(TB))
)
Spec1 = (Linearizers({TA, TB}) [|{|Sync|}|] Spec) \ {|Sync|}
assert Spec1 [T= System1
assert System1 [T= Spec1